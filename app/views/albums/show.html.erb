<h2><%= @album.title %></h2>
<p><strong>Artist:</strong> <%= link_to @album.artist.name, artist_path(@album.artist) %></p>
<p><strong>Released:</strong> <%= @album.released_on %></p>

<h4 class="mt-4">Tracks</h4>
<ul class="list-group">
  <% @album.tracks.each do |track| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= link_to track.title, track_path(track) %>
    </li>
  <% end %>
</ul>

<%= link_to 'Add Track', new_track_path(album_id: @album.id), class: "btn btn-sm btn-success mt-3" %>
