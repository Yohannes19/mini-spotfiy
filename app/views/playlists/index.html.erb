<h1>My Playlists</h1>

<%= link_to 'New Playlist', new_playlist_path, class: "btn btn-primary mb-3" %>

<ul class="list-group">
  <% @playlists.each do |playlist| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= link_to playlist.title, playlist_path(playlist) %>
      <%= link_to 'Edit', edit_playlist_path(playlist), class: "btn btn-sm btn-outline-secondary" %>
    </li>
  <% end %>
</ul>
